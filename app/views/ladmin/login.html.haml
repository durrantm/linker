%h3 Login
- form_tag do
  %fieldset
    %legend Please Log In
    %table
      %tr
        %td
          %label{:for => "name"} Name:
        %td= text_field_tag :username, params[:username]
      %tr
        %td
          %label{:for => "password"} Password:
        %td
          = password_field_tag :password, params[:password]
      %tr
        %td{:colspan => "2"}
          = submit_tag "Login"
