<%= form_for(@feature_switch) do |f| %>
  <% if @feature_switch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature_switch.errors.count, "error") %> prohibited this feature_switch from being saved:</h2>

      <ul>
      <% @feature_switch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :status %><br>
    <%-# f.collection_select(:feature_switch, :status, FeatureSwitch::STATUSES, :STATUSES, prompt: true) %>
    <select>
      <%= options_for_select(['on','on_if','off']) %>
    </select>
  </div>
  </br>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 30 %>
  </div>
  </br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 4, columns: 60 %>
  </div>
  </br>
  <div class="field">
    <%= f.label :conditions %><br>
    <%= f.text_field :conditions, size: 50 %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
