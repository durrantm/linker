  - ending = "_refocus"
- else
  - ending = ""
%span{class: "show_hide shown_shading_link"}
  %a{href: '#', :data => {"toggle_group_row_shading#{ending}" => 'toggle'}}
    - if flag == '0'
      %b
        Yes
      \/ No
    - else
      Yes
      %b
        \/ No
