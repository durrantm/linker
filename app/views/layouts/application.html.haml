%head
  -#%meta http-equiv="content-type" content="text/html;charset=UTF-8"  #
  %title="Linker: "+controller.action_name + ' ' + controller.controller_name.singularize
  = stylesheet_link_tag 'contam/default.scss'
  = stylesheet_link_tag 'main.css'
  -### went other route so not using #= stylesheet_link_tag '../javascripts/jquery.datepick.css'
  = javascript_include_tag "prototype"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"
  = javascript_include_tag "jQueryUI/js/jquery-ui-1.8.11.custom.min.js"
  %script
    // this allows jquery to be called along with scriptaculous and YUI without any conflicts
    // the only difference is all jquery functions should be called with $j instead of $
    // e.g. $j('#div_id').stuff instead of $('#div_id').stuff
    var $j = jQuery.noConflict();
  = javascript_include_tag :defaults
  = csrf_meta_tag
  = calendar_date_select_includes "silver"
  =#%link(rel="shortcut icon" href="/linker/images/link.ico" mce_href="http://www.rormd.com" type="image/vnd.microsoft.icon")
  %link(rel="shortcut icon" href="/images/link.ico" mce_href="http://www.rormd.com" type="image/vnd.microsoft.icon")
%body
  #banner
    %h1= link_to 'Linker', :controller => 'links'
    %h2= ::Rails.env.downcase != 'production' ? RAILS_ENV : ''
  #columns
    #side
      .alink= link_to 'Links', links_path
      - if session[:user_id]
        .alink= link_to 'New Link', new_link_path
      .alink= link_to 'Groups', groups_path
      - if session[:user_id]
        .alink= link_to 'New Group', new_group_path
        .alink= link_to 'Admin', users_path
        - if session[:username]
          .alink= link_to 'Logout', :controller => :ladmin, :action => 'logout'
          %span#username_display
            .alink= session[:username]
      - else
        .alink= link_to 'Login', :controller => :ladmin, :action => 'login'
    #main
      -#%p
        - if flash[:notice]
          %span#notice
            = flash[:notice]
      = yield :layout
