<h1>New user</h1>

<% form_for(@user) do |f| %>

  <%= f.error_messages %>

<fieldset>

	<legend>
		Details.
	</legend>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password, 'Password' %><br />
    <%= f.password_field :password, :size => 40 %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Confirm' %><br />
    <%= f.password_field :password_confirmation, :size => 40 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>

</fieldset>

<% end %>

<%= link_to 'Back', users_path %>
