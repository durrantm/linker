$(function(){
  $("a[data-show-group-members]='true'").bind('click', function() {
    var gid= $(this).data("id");
    var gname= $(this).data("name");
    $('<tr><td colspan="4">Members:</br><ul id="group-members"></ul>Delete the <b>'+gname+'</b> group and all its members: <b><a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href=\'/groups/'+gid+'\'>Yes</a></b> <b><a href="groups" data-close-group="true">No</b></br></br>').insertAfter($(this).closest('tr'));
    var the_links=
      $.ajax({
        type: "GET",
        url: "<%= Rails.application.routes.url_helpers.groups_path %>" + "/" + gid,
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (result) {
          DisplayListItems(result);
        },
        "error": function (result) {
          var response = result.responseText;
          alert('Error loading: ' + response);
        }
      });
    function DisplayListItems(list) {
      $.each(list, function(index, element) {
        var verified_text = '<span class="done">&nbsp;Verified</span>'
        var verify_link = '<span id="verify_link_' + element.id + '" class="undone">&nbsp;<a href="#" data-verifying-link="yes" data-id="' + element.id + '" data-table-row="' + element.id + '">Verify</a></span>'
        var details_link = '&nbsp; <a href="links/' + element.id + '">Details</a>'
        var verified_or_link = element.verified_date ? verified_text : verify_link
        var itemHTML = ["<li>", element.url_address, ' ', verified_or_link, details_link, "</li>"].join('\n');
        $("ul#group-members").append(itemHTML);
      });
      //$("ul#group-members").append('<br><a href="verify_group">Verify All</a>');
    }

    $(this).html("");
  });
});
